{
  "name": "apollo-angular-course",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "build": "ng build",
    "lint": "ng lint",
    "test": "npx cypress open",
    "test:open": "npx cypress open --browser edge",
    "test:cypress-headed": "npx cypress --headed",
    "tsc:check": "npm run tsc:src && npm run tsc:cypress",
    "tsc:src": "tsc --noEmit --project tsconfig.json",
    "tsc:cypress": "tsc --noEmit --project cypress/tsconfig.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.0.3",
    "@angular/cdk": "^13.0.3",
    "@angular/common": "~13.0.3",
    "@angular/compiler": "~13.0.3",
    "@angular/core": "~13.0.3",
    "@angular/forms": "~13.0.3",
    "@angular/material": "^13.0.3",
    "@angular/platform-browser": "~13.0.3",
    "@angular/platform-browser-dynamic": "~13.0.3",
    "@angular/router": "~13.0.3",
    "@apollo/client": "^3.3.19",
    "@ngneat/until-destroy": "^9.0.0",
    "apollo-angular": "^2.6.0",
    "apollo-angular-link-http": "^1.11.0",
    "graphql": "^15.7.2",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.0.4",
    "@angular/cli": "~13.0.4",
    "@angular/compiler-cli": "~13.0.3",
    "@angular/language-service": "~13.0.3",
    "@cypress/code-coverage": "^3.9.12",
    "@ngneat/spectator": "^7.2.0",
    "@testing-library/cypress": "^8.0.2",
    "@types/istanbul-lib-coverage": "^2.0.3",
    "@types/jasmine": "~3.10.2",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^16.11.11",
    "@types/uuid": "^8.3.3",
    "codelyzer": "^6.0.2",
    "concurrently": "^6.4.0",
    "cypress": "^9.1.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-testing-library": "^4.12.4",
    "husky": "^7.0.4",
    "istanbul-lib-coverage": "^3.2.0",
    "json-server": "^0.17.0",
    "lint-staged": "^12.1.2",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "ts-node": "~10.4.0",
    "tslint": "~6.1.3",
    "typescript": "~4.4.4",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  }
}
